<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="idea_note_view_list" model="ir.ui.view">
        <field name="name">idea.note.list</field>
        <field name="model">idea.note</field>
        <field name="arch" type="xml">
            <list string="Danh sách ý tưởng" class="title">
                <field name="name" class="content"/>
                <field name="description" />
                <field name="category" />
                <field name="create_date" string="Ngày tạo" />
                <field name="is_important"/>
            </list>
        </field>
    </record>

    <record id="idea_note_view_form" model="ir.ui.view">
        <field name="name">idea.note.form</field>
        <field name="model">idea.note</field>
        <field name="arch" type="xml">
            <form string="Ý tưởng">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="category" />
                        <field name="create_date" string="Ngày tạo" />
                        <field name="is_important" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="idea_note_view_kanban" model="ir.ui.view">
        <field name="name">idea.note.kanban</field>
        <field name="model">idea.note</field>
        <field name="arch" type="xml">
            <kanban string="Ý tưởng" default_group_by="category">
                <field name="name" />
                <field name="description" />
                <field name="category" />
                <field name="create_date" />
                <field name="is_important" />
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <strong>
                                <field name="name" />
                            </strong>
                            <div>
                                <field name="description" />
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="idea_note_action" model="ir.actions.act_window">
        <field name="name">Sổ tay ý tưởng</field>
        <field name="res_model">idea.note</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p>
                Chưa có ý tưởng nào. Hãy tạo một cái mới!
            </p>
        </field>
    </record>

    <record id="important_idea_note_action" model="ir.actions.act_window">
        <field name="name">Ý tưởng quan trọng</field>
        <field name="res_model">idea.note</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('is_important', '=', True)]</field>
        <field name="help" type="html">
            <p>
                Chưa có ý tưởng quan trọng nào. Hãy tạo một cái mới và đánh dấu nó là quan trọng!
            </p>
        </field>

    </record>

    <record id="note_personal_action" model="ir.actions.act_window">
        <field name="name">Ghi chú cá nhân</field>
        <field name="res_model">idea.note</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('category', '=', 'personal')]</field>
        <field name="help" type="html">
            <p>
                Chưa có ghi chú cá nhân nào. Hãy tạo một cái mới!
            </p>
        </field>

    </record>

    <record id="note_work_action" model="ir.actions.act_window">
        <field name="name">Ghi chú công việc</field>
        <field name="res_model">idea.note</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('category', '=', 'work')]</field>
        <field name="help" type="html">
            <p>
                Chưa có ghi chú công việc nào. Hãy tạo một cái mới!
            </p>
        </field>

    </record>

    <record id="note_project_action" model="ir.actions.act_window">
        <field name="name">Ghi chú dự án</field>
        <field name="res_model">idea.note</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('category', '=', 'project')]</field>
        <field name="help" type="html">
            <p>
                Chưa có ghi chú dự án nào. Hãy tạo một cái mới!
            </p>
        </field>
    </record>
</odoo>